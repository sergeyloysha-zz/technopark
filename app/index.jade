    main
      section.filters
        ul.filters__list
          li.filters__item
            .filter.filter--large
              a.filter__link
                span.filter__title Любого типа
                span.filter__drop
              .filter__dropdown.dropdown
                .dropdown__inner
                  ul.dropdown__list
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
                        span.dropdown__text Компакт-камера
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
                        span.dropdown__text Беззеркальная
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
                        span.dropdown__text Зеркальная
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
                        span.dropdown__text Среднеформатная
          li.filters__item
            .filter
              a.filter__link
                span.filter__title Любого бренда
                span.filter__drop
              .filter__dropdown.dropdown
                .dropdown__inner
                  ul.dropdown__list
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
                        span.dropdown__text Canon
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
                        span.dropdown__text Nikon
                    li.dropdown__item
                      label.dropdown__link
                        input(type='checkbox').dropdown__input
