@require "normalize.css"

@font-face {
  font-family "Roboto"
  font-style normal
  font-weight 400
  src url('../fonts/Roboto-Regular.woff')
}

@font-face {
  font-family "Roboto"
  font-style normal
  font-weight 500
  src url('../fonts/Roboto-Medium.woff')
}

@font-face {
  font-family "Roboto"
  font-style normal
  font-weight 600
  src url('../fonts/Roboto-Bold.woff')
}

font-base = 'Roboto', Helvetica, Arial, sans-serif

//sizes
size-font = 1.4rem
size-line = 1.8rem

//colors
color-main = rgb(153, 153, 153)
color-light = rgb(230, 230, 230)
color-dark = rgb(68, 68, 68)
color-black = rgb(0, 0, 0)
color-white = rgb(255, 255, 255)
color-blue = rgb(68, 136, 255)

*
  &
  &:before
  &:after
    box-sizing border-box
  &:active
    -webkit-tap-highlight-color: alpha(color-white, 0)

::selection
  background alpha(color-blue, 0.05)

input
textarea
  &:focus
    outline 0

html
  font-size 62.5%
  background color-white
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  position relative
  min-height 100vh
  display flex
  flex-direction column
  font 500 size-font/size-line font-base
  color color-main

a
a:link
a:active
a:visited
  text-decoration none

.header
  background color-blue

  &__inner
    display flex
    flex-direction column
    justify-content space-between
    max-width 1170px
    min-width 1024px
    height 120px
    margin 0 auto
    padding 0 15px

.head
  display flex
  justify-content space-between
  align-items center
  margin 15px 0 0 0

  &__link
    position relative
    color color-white
    text-transform uppercase
    letter-spacing 1px
    box-shadow: inset 0px -1px 0px 0px alpha(color-white, 0)
    transition box-shadow .2s

    &:hover
      box-shadow: inset 0px -1px 0px 0px alpha(color-white, 0.25)

    &--phone
      margin 0 45px

  &__search
    flex 1
    margin 0 45px 0 0

  &__button
    display none
    position relative
    width 60px
    height 50px

    &:after
      content ' '
      position absolute
      top 15px
      left 20px
      right 20px
      bottom 15px
      width 20px
      height 20px
      background-position center
      background-repeat no-repeat



    &--menu:after
      top 16px
      background-image url('../images/menu_white.svg')

    &--cart:after
      background-image url('../images/cart_white.svg')

    &--search
      margin-left auto
      width 50px

    &--search:after
      left 15px
      right 15px
      background-image url('../images/search_white.svg')

.logo
  transform translateY(0)

  &__big,
  &__small
    display flex
  &__small
    display none

  &:active
    transform translateY(1px)

.search
  position relative
  display flex

  &__button
    position absolute
    top 10px
    z-index 1
    width 20px
    height 20px
    background url('../images/search_white.svg') center no-repeat

  &__input
    padding 10px 0 10px 30px
    width 100%
    height 40px
    line-height 2rem
    background transparent
    border none
    box-shadow inset 0px -1px 0px 0px alpha(color-white, 0.25)
    color color-white
    text-transform uppercase
    cursor pointer
    z-index 2
    transition: box-shadow .5s

    &::placeholder
      text-transform uppercase
      color alpha(color-white, 0.5)

    &:hover,
    &:focus
      box-shadow inset 0px -1px 0px 0px color-white

    &:focus
      cursor auto

.navigation

  &__list
    display flex
    margin 0 -15px
    padding 0
    list-style none

  &__item
    &--last
      margin-left auto

  &__link
    display flex
    padding 10px 15px
    line-height 2rem
    color color-white
    text-transform uppercase
    letter-spacing 1px
    background transparent
    transition background .2s

    &:hover
      background alpha(color-dark, 0.2)

    &--active
      background color-dark

      &:hover
        background color-dark

    &-icon
      margin-right 10px

main
  flex 1 0 auto
  max-width 1170px
  min-width 1024px
  padding 0 15px
  margin 0 auto

.products

  &__list
    display flex
    flex-wrap wrap
    margin 0 -15px
    padding 0
    list-style none

.product
  position relative
  min-width 25%
  max-width 25%
  height 383px
  flex 1 1 25%
  border-right 1px solid color-light
  border-bottom 1px solid color-light

  &__inner
    display flex
    flex-direction column
    padding 15px
    height 100%
    transition all 0.2s ease-in-out

  &:nth-child(4n)
    border-right-color transparent

  &:first-child:after,
  &:nth-child(5n):after,
  &:nth-child(4n):after
    content ' '
    position absolute
    width 15px
    height 1px
    bottom -1px
    background color-white
    transition bottom 0.2s ease-in-out

  &:first-child:after,
  &:nth-child(5n):after
    left 0

  &:nth-child(4n):after
    right 0

  &:hover &__inner
    box-shadow 0 0 0 1px color-blue
    background alpha(color-blue, 0.05)

  &:hover:after
    bottom -2px

  &:hover &__name h3
    color color-blue

  &__image
    display flex
    align-items flex-end
    height 160px
    overflow hidden

    &--left
      background-position left

    &--right
      background-position right

    &--banner
      height 100%

    img
      display block


  &__name
    margin 25px 0 10px 0
    height 44px
    overflow hidden

    h3
      margin 0
      font-size 1.8rem
      font-weight 500
      line-height 2.2rem
      color color-dark
      transition color .2s

  &__details
    color color-main
    font-weight 300
    margin-top auto
    overflow hidden
    height 71px
    margin-bottom 9px

  &__price
    display flex
    border-top 1px solid color-blue
    align-items center
    padding 10px 0

    span
      font-size 1.8rem
      color color-blue

    &-icon
      margin-left auto

.filters
  margin 30px 0 45px 0

  &__list
    display flex
    margin 0
    padding 0
    list-style none

  &__item
    margin-right 15px

.filter
  position relative
  width 190px

  &--large
    width 240px


  &--active
    .filter__link
      box-shadow 0 5px 5px 0 alpha(color-black, 0.2)
      border-left-color color-white
      border-right-color color-white
      border-top-color color-light
      border-bottom-color color-light
      &:hover
        border-left-color color-white
        border-right-color color-white
        border-top-color color-light
        border-bottom-color color-light
        background color-white

    .dropdown
      max-height 900px
      opacity 1
      top 100%

  &__link
    position relative
    display block
    height 40px
    padding 0 15px
    line-height 38px
    cursor pointer
    border 1px solid color-main
    background color-white
    transition border .2s, background .2s, box-shadow .3s

    &:hover
      border 1px solid color-blue
      background alpha(color-blue, 0.05)

      .filter__title
        color color-blue

      .filter__drop
        background-image url('../images/drop_blue.svg')

  &__title
    display inline-block
    width calc(100% - 25px)
    text-transform uppercase
    color color-dark
    user-select none
    white-space nowrap
    overflow hidden
    transition color .2s

  &__drop
    position absolute
    width 20px
    height 20px
    top 10px
    right 11px
    background-image url('../images/drop_dark.svg')
    background-position center
    background-repeat no-repeat
    transition background-image .2s

.dropdown
  position absolute
  top 50%
  right 0
  bottom auto
  left 0
  max-height 0
  opacity 0
  display block
  overflow hidden
  z-index: 20
  box-shadow 0 5px 5px 0 alpha(color-black, 0.2)
  transition max-height .3s, opacity .1s, top .2s

  &__inner
    position relative
    background color-white
    padding 15px 0

  &__list
    margin 0
    padding 0
    list-style none

  &__item
    position relative

  &__input
    opacity 0
    z-index -1
    position absolute

    &:checked + .dropdown__text:after
      opacity 1

  &__text
    display block
    padding 10px 15px
    line-height: 2rem
    text-transform uppercase
    color color-dark
    background color-white
    transition color .2s, background .2s
    cursor pointer
    overflow hidden
    white-space nowrap
    user-select none

    &:hover
      color color-blue
      background alpha(color-blue, 0.05)

    &:after
      content ' '
      position absolute
      top 10px
      right 15px
      width 20px
      height 20px
      background-image url('../images/check_blue.svg')
      background-repeat no-repeat
      background-position center
      opacity 0
      transition opacity .15s

.range
  display flex
  align-items center

  &__span
    text-transform uppercase
    margin 0 15px
    z-index 21

  &__group
    display flex
    flex-direction row

  &__item
    position relative

    &:last-child
      .range__input
        left -1px

    .range__span
      position absolute
      top 11px
      left 0px
      cursor pointer
      user-select none


  &__input
    position relative
    border 1px solid color-main
    padding 10px 15px 10px 50px
    width 160px
    text-align right
    color color-dark
    background color-white
    text-transform uppercase
    transition background .2s, border .2s
    z-index 10

    &:focus
      border 1px solid color-blue
      background alpha(color-blue, 0.05)
      z-index 20


.footer

  &__inner
    max-width 1170px
    min-width 1024px
    padding 0 15px
    margin 0 auto

  &__list
    margin 100px 0 15px 0
    padding 0
    list-style none

    display flex

  &__item
    margin-left 30px
    line-height 2rem

    &:first-child
      margin-left 0

    &--last
      margin-left auto

  &__item
    span
      font-weight 400

  &__link
    display inline-block
    font-weight 400
    color color-dark
    box-shadow inset 0px -1px 0px 0px transparent
    transition: box-shadow .2s

    &:hover
      box-shadow inset 0px -1px 0px 0px color-main

.overlay
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 100
  overflow-y auto
  opacity 1
  transition opacity .2s ease-in
  background alpha(color-main, 0.5)
  text-align center

  &--open
    position static !important
    overflow hidden

  &--hidden
    transition opacity .3s ease-in,visibility .3s ease-in
    visibility hidden
    overflow hidden
    opacity 0

    .popup
      transform translateY(-100px)
      opacity 0

.popup
  display inline-block
  position relative
  width 700px
  margin 120px 0
  box-shadow 0 5px 5px 0 alpha(color-black, 0.2)
  transform translateY(0)
  opacity 1
  transition: transform .3s, opacity .3s

  &__inner
    padding 30px
    background color-white

  &__control
    position absolute
    top 0
    right 0
    width 40px
    height 40px
    background color-white

    &:after
      content ' '
      position absolute
      top 10px
      left 10px
      right 10px
      bottom 10px
      width 20px
      height 20px
      background url('../images/close_dark.svg') center no-repeat
      opacity 1
      transition opacity .2s

    &:hover
      &:after
        opacity 0.5

.card

  text-align left

  &__photo
    margin 30px 0
    text-align center

    img
      display inline-block
      height 400px

  &__content
    display flex
    border-top 1px solid color-light

  &__title
    display block
    font-size 2.5rem
    line-height 3rem
    color color-dark
    font-weight 500
    margin 25px 0 20px 0

  &__data
    flex-grow 2
    flex-shrink 0
    position relative

    &-link
      color color-blue

    &-table
      width calc(100% - 30px)
      margin-bottom 15px

      &__row
        height 25px

      &__row:first-child
        height 20px

      &__cell
        width 50%

        span
          font-weight 400
          width 80%

  &__info
    flex-grow 1
    flex-shrink 1
    border-left 1px solid color-light
    padding: 0 0 0 30px

    &-text
      position relative

    &-stock
      margin 25px 0 10px 0

      &__text
        font-weight 500
        color color-dark

.button
  display inline-flex
  align-items center
  padding 10px 15px
  border 1px solid color-blue
  cursor pointer
  justify-content center
  transition background .2s
  transform translateY(0)

  &:hover
    background alpha(color-blue, 0.05)

  &:active
    transform translateY(1px)

  &__icon
    margin-right 10px

  span
    line-height 2rem
    text-transform uppercase
    color color-blue

  &--block
    display flex


.icon
  width 20px
  height 20px
  background-position center
  background-repeat no-repeat

  &--cart-white
    background-image url('../images/cart_white.svg')

  &--cart-blue
    background-image url('../images/cart_blue.svg')

@media (max-width 1040px)

  .header

    &__inner
      max-width 100%
      min-width 100%
      padding 0
      height auto

  .logo

    &__big
      display none
    &__small
      display flex

  .head
    margin 0
    &__link
      display none

    &__button
      display block

  .search
    display none

  .navigation
    padding 0
    max-height 0
    opacity 0
    overflow hidden
    transition max-height 0.5s, opacity 0.5s
    will-change max-height, opacity

    &--active
      max-height: 100vh
      opacity 1

    &__list
      margin 0
      flex-direction column

    &__item
      &--last
        display none

  main
    max-width 100%
    min-width 100%
    padding 0 20px

  .products
    &__list
      margin 0 -20px

  .product
    position relative
    min-width 50%
    max-width 50%
    height 382px
    flex 1 1 50%
    border-right 0

    &--banner
      display none

    &__inner
      padding 20px

    &__image
      margin-top 20px
      height auto

    &__details
      height auto

    &:after
      display none

  .filters
    display none
    &__list
      flex-direction column

  .footer
    &__inner
      max-width 100%
      min-width 100%
      padding 0 20px

    &__list
      flex-direction column
      margin-top 0

    &__item
      margin 0

      &:nth-child(1)
        order 3
      &:nth-child(2)
        order 1
      &:nth-child(3)
        order 2
      &:nth-child(4)
        order 4
      &--last
        margin 0

      &:nth-child(2)
        margin-top 20px
      &:nth-child(3)
        margin-bottom 40px

      &:nth-child(1)
      &:nth-child(4)
        .footer__link
          line-height 4rem

      &:nth-child(2)
      &:nth-child(3)
        .footer__link
          width 100%
          height 70px
          line-height 7rem
          box-shadow inset 0px -1px 0px 0px color-light

    &__link:hover
      box-shadow inset 0px -1px 0px 0px transparent

@media (max-width 768px)

  .products
    &__list
      flex-direction column

  .product
    position relative
    min-width 100%
    max-width 100%
    height auto
    flex 1
